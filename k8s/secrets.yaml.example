# Example Kubernetes secrets file
# Copy this to secrets.yaml and replace with actual base64-encoded values
# DO NOT commit secrets.yaml to version control

apiVersion: v1
kind: Secret
metadata:
  name: gitcaster-secrets
type: Opaque
data:
  # Base64 encode your secrets: echo -n "your-value" | base64
  database-url: <base64-encoded-database-url>
  session-secret: <base64-encoded-session-secret>
  github-client-id: <base64-encoded-github-client-id>
  github-client-secret: <base64-encoded-github-client-secret>
  talent-protocol-api-key: <base64-encoded-talent-api-key>
  sentry-dsn: <base64-encoded-sentry-dsn>

